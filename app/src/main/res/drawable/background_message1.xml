    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="0dp" />
            <solid android:color="#dddddd" />
        </shape>
    </item>
</layer-list>